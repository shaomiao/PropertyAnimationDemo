<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E0DE"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/login_div"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:background="@drawable/corners_bg"
        android:padding="10dp"
        android:orientation="vertical"
        >

        <!--<ImageView-->
            <!--android:id="@+id/imageView1"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@mipmap/ic_launcher" />-->

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/person_title"
            android:textColor="#000"
            android:gravity="center_horizontal"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/person_num"
            android:textColor="#000"
            android:gravity="center_horizontal"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/person_red"
            android:textColor="#000"
            android:gravity="center_horizontal"
            android:textSize="18sp" />
        <ImageView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#000"
            />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/person_barcode"
            android:textColor="#000"
            android:gravity="center_horizontal"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.shaomiao.myapplication.XCRoundImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/aaa"
            />

    </LinearLayout>

</LinearLayout>